---
// Hero.astro
---

<section id="inicio" class="relative min-h-screen overflow-hidden">
  <!-- Fondo degradado -->
  <img
    src="/hero/gradiente.png"
    alt="Fondo degradado"
    class="absolute inset-0 w-full h-full object-cover z-0"
  />

  <!-- Contenedor principal -->
  <div class="relative grid grid-cols-1 lg:grid-cols-[60%_40%] min-h-screen items-center z-10">
    
    <!-- Columna izquierda -->
    <div class="relative h-full flex flex-col justify-center px-6 sm:px-10 md:px-16 pt-12 z-10">
      <!-- Círculo decorativo -->
      <img
        src="/svg/circle_animated.svg"
        alt="Decoración"
        class="absolute top-6 left-6 sm:top-8 sm:left-8 md:top-12 md:left-12 z-10 ripple"
      />

      <!-- Contenido textual -->
      <div class="relative z-20 max-w-xl text-left mx-auto lg:mx-0 pb-8 mb-4">
        <!-- Banner de descuento -->
        <p
          class="inline-block mb-4 px-5 py-2 rounded-full text-white font-semibold text-sm sm:text-base lg:text-lg shadow-md"
          style="background-color: #6255FA;"
        >
          🎉 Tu primera clase con 50% de descuento
        </p>

        <!-- Título -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-4 leading-tight text-black">
          Convierte tus <br />
          metas en <span class="text-[#6255FA]">logros</span>
        </h1>

        <!-- Descripción -->
        <p class="mb-6 text-black text-base lg:text-lg font-medium">
          Reserva una clase privada con un docente solo enfocado en ti.
        </p>

        <!-- Botón WhatsApp -->
        <a
          id="wspp-hero"
          href="https://wa.me/51996096191"
          target="_blank"
          class="inline-flex items-center justify-center gap-3 text-white font-semibold text-base lg:text-lg px-6 py-3 rounded-xl transition duration-300"
          style="background-color: #6255FA;"
          onmouseover="this.style.backgroundColor='#4e44d8'"
          onmouseout="this.style.backgroundColor='#6255FA'"
        >
          <img src="/svg/whatsapp.svg" alt="WhatsApp" class="w-5 h-5" />
          Contactar un asesor
        </a>
      </div>
    </div>

    <!-- Columna derecha (sólo escritorio) -->
    <div
      class="relative hidden lg:flex min-h-[500px] sm:min-h-[600px] lg:min-h-screen items-end justify-center z-10"
    >
      <!-- Fondo morado -->
      <div class="absolute bottom-0 right-0 w-[460px] h-full bg-[#6255FA] z-[-1]"></div>

      <!-- Estrella decorativa -->
      <img
        src="/svg/animated.svg"
        alt="Decoración"
        class="absolute top-6 right-6 sm:top-10 sm:right-[60px] z-10 rotate-slow"
      />

      <!-- Imagen del docente -->
      <img
        src="/hero/person.png"
        alt="Docente"
        class="absolute bottom-0 z-10 object-contain w-auto h-auto max-h-[95vh]"
      />
    </div>
  </div>
</section>
